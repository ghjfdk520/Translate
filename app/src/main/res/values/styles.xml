<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/teal</item>

    </style>

    <style name="Widget" />

    <style name="Widget.Main.Card" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/card_margin_vertical</item>
    </style>

    <style name="Widget.SampleDashboard.Card" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:layout_marginTop">@dimen/card_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_vertical</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <style name="Widget.SampleDashboard.Item" parent="Widget"></style>

    <style name="Widget.SampleDashboard.Item.Title" parent="Widget">
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/teal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.SampleDashboard.Item.Description" parent="Widget">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/black_54</item>
    </style>
</resources>
